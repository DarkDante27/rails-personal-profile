 <%= link_to project_path(project) do %>
 <div class="cards-container">
    <img src="<%= project.photos.first %>" class="card-image" style="width:100%">
      <div class="middle">
        <div class="text"><%= project.title %></div>
      </div>
  </div>
<% end %>

<script>
  ScrollReveal({ reset: true });
  ScrollReveal().reveal('.cards-container', { delay: 150 });
</script>

